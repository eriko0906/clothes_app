<h1>ユーザ新規登録ページ</h1>

<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_with(model: @user,url: {controller: 'users', action: 'create' },multipart: true,local: true) do |form|%>
  <div class="form">
    <div class="form-body">
      <p>user_id</p>
      <%= form.text_field :user_id,value: @user.user_id%>
      <p>nickname</p>
      <%= form.text_field :nickname,value: @user.nickname%>
      <p>email</p>
      <%= form.email_field :email,value: @user.email%>
      <p>pw</p>
      <%= form.password_field :pw,value: @user.pw%>
      <p>profile画像</p>
      <%= form.file_field :image%>
      <br>
      <%= form.submit "新規登録"%>
    </div>
  </div>
<% end %>

<%= link_to("HOME","/") %>
